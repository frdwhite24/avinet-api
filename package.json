{
  "name": "avinet-back",
  "version": "1.0.0",
  "description": "The GraphQL API backend for AviNet.",
  "main": "index.ts",
  "scripts": {
    "lint": "eslint --ext .ts",
    "test": "CI=true NODE_ENV=test jest --verbose --colors --runInBand --detectOpenHandles",
    "test:staged": "CI=true NODE_ENV=test jest --findRelatedTests --runInBand",
    "dev": "NODE_ENV=development ts-node-dev src/index.ts",
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frdwhite24/avinet-back.git"
  },
  "author": "Fred White",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/frdwhite24/avinet-back/issues"
  },
  "homepage": "https://github.com/frdwhite24/avinet-back#readme",
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/faker": "^5.1.5",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.13",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "type-graphql": "^1.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@typegoose/typegoose": "^7.4.5",
    "apollo-server-express": "^2.19.0",
    "argon2": "^0.27.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.19",
    "reflect-metadata": "^0.1.13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint",
      "npm run test:staged"
    ]
  }
}
